{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30
  },
  "configurePresets": [
    {
      "name": "LinuxDebugASan",
      "description": "Debug build with address sanitizers",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_BUILD_TYPE": "Debug",
        "ASAN": "TRUE"
      }
    },
    {
      "name": "LinuxDebugTSan",
      "description": "Debug build with thread sanitizers",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_BUILD_TYPE": "Debug",
        "TSAN": "TRUE"
      }
    },
    {
      "name": "LinuxRelease",
      "description": "Release build",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang.exe",
        "CMAKE_CXX_COMPILER": "clang.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "WindowsDebugASan",
      "displayName": "Debug build with address sanitizers",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ASAN": "TRUE"
      }
    },
    {
      "name": "WindowsRelease",
      "displayName": "Release build",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "WindowsDebugTsan",
      "displayName": "Debug build with thread sanitizers",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TSAN": "TRUE"
      }
    }
  ]
}