{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30
  },
  "configurePresets": [
    {
      "name": "DebugASan",
      "description": "Debug build with address sanitizers",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_BUILD_TYPE": "Debug",
        "ASAN": "TRUE"
      }
    },
    {
      "name": "DebugTSan",
      "description": "Debug build with thread sanitizers",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_BUILD_TYPE": "Debug",
        "TSAN": "TRUE"
      }
    },
    {
      "name": "Release",
      "description": "Release build",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
        "name": "windows-base",
        "hidden": true,
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/${presetName}",
        "installDir": "${sourceDir}/install/${presetName}",
        "cacheVariables": {
            "CMAKE_C_COMPILER": "clang.exe",
            "CMAKE_CXX_COMPILER": "clang.exe",
            "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        "condition": {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Windows"
        }
    },
    {
      "name": "x64-debug-asan",
      "displayName": "x64 Debug",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ASAN": "TRUE"
      }
    },
    {
      "name": "x64-debug-tsan",
      "displayName": "x64 Debug",
      "inherits": "windows-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TSAN": "TRUE"
      }
    },

    {
        "name": "x64-release",
        "displayName": "x64 Release",
        "inherits": "windows-base",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release"
        }
    },
    {
        "name": "x86-debug-asan",
        "displayName": "x86 Debug",
        "inherits": "windows-base",
        "architecture": {
            "value": "x86",
            "strategy": "external"
        },
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug",
            "ASAN": "TRUE"
        }
    },
    {
      "name": "x86-debug-tsan",
      "displayName": "x86 Debug",
      "inherits": "windows-base",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TSAN": "TRUE"
      }
    },
    {
        "name": "x86-release",
        "displayName": "x86 Release",
        "inherits": "windows-base",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release"
        }
    }
    ]
}